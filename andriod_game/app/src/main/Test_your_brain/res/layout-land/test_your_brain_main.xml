<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Test_your_brain.test_your_brain_MyAndroidAppActivity"
    android:orientation="vertical"
    android:background="#0a676a"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.9">
        <TextView
            android:id="@+id/textLevelView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Level : " />

        <ImageView
            android:id="@+id/glowArrow"
            android:src="@drawable/test_your_brain_yellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"/>

        <TextView
            android:id="@+id/displayScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Score : 0"/>

        <TextView
            android:id="@+id/textHS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="High Score :"/>

        <TextView
            android:id="@+id/textTotalTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" "/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageArrow"
        android:src="@drawable/test_your_brain_arrow_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pattern1"
            android:layout_width="98dp"
            android:layout_height="100dp"
            android:background="@drawable/test_your_brain_goat"
            android:layout_gravity="bottom"
            android:src="@drawable/test_your_brain_hexagon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textTimer"
                android:gravity="center|top"/>

            <ImageButton
                android:id="@+id/imageback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:src="@drawable/test_your_brain_backmedium"
                android:background="@drawable/test_your_brain_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Average response time"
                android:id="@+id/textART" />

        </LinearLayout>

        <ImageView
            android:id="@+id/pattern2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/test_your_brain_sheep"
            android:src="@drawable/test_your_brain_hexagon"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/crossButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/test_your_brain_cross"
            android:scaleType="fitCenter"
            android:background="@null"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/test_your_brain_sheep"/>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/test_your_brain_cat" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/test_your_brain_cow"
            android:contentDescription="Third Image" />

        <ImageButton
            android:id="@+id/tickButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/test_your_brain_tick"
            android:scaleType="fitCenter"
            android:background="@null"/>

    </LinearLayout>


</LinearLayout>